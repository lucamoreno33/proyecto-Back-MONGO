<main>
    <h1>Productos:</h1>
    {{#each products}}
        <div>
            <p>producto: {{this.title}}</p>
            <p>{{this.description}}</p>
            <p>marca: {{this.brand}}</p>
            <p>precio: {{this.price}}</p>
            <p>codigo de producto: {{this.code}}</p>
            <p>stock {{this.stock}}</p>
        </div>
        <br>
    {{/each}}

    {{#if hasPrevPage}}
        <a href="/?page={{prevPage}}"><button>anterior</button></a>
    {{/if}}

    {{page}}
    
    {{#if hasNextPage}}
        <a href="/?page={{nextPage}}"><button>siguiente</button></a>
    {{/if}}
</main>
